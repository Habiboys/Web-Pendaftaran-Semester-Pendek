

    <%- include('layout/header') %>
    <div class="container my-10 px-16 mt-12">
      <!-- content -->
      <h1 class="text-3xl font-bold mb-4">Profil Mahasiswa</h1>
      <div class="overflow-x-auto">
        <table class="table table-compact w-full">
          <tbody>
            <tr>
              <th>Nama:</th>
              <td><%= user.Student.name %></td>
            </tr>
            <tr>
              <th>NIM:</th>
              <td><%= user.Student.nim %></td>
            </tr>
            <tr>
              <th>Email:</th>
              <td><%= user.email %></td>
            </tr>
            <tr>
              <th>Tanggal Lahir:</th>
              <td><%= tanggalLahir %></td>
            </tr>
            <tr>
              <th>Telepon:</th>
              <td><%= user.Student.phone %></td>
            </tr>
            <tr>
              <th>Jenis Kelamin:</th>
              <td><%= user.Student.gender %></td>
            </tr>
            <tr>
              <th>Alamat:</th>
              <td><%= user.Student.address %></td>
            </tr>
          </tbody>
        </table>
      </div>

        <a href="./profile/ubah-password" class="btn btn-primary mt-4">Ubah Password</a>
 </div>
    <%- include('layout/footer') %>